<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>
<div class="box">
    <form action="/delete" method="post">
        <% newListItems.forEach((val,idx,arr)=>{ %>
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= val._id %>" onchange="this.form.submit()" />
                <p><%= val.name %></p>
            </div>
        <% }) %>
        <input type="hidden" name="listName" value="<%= listTitle %>"/>
    </form>
    <form action="/" method="post" class="item">
        <input type="text" name="newItem" id="" placeholder="New item" autocomplete="off" />
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
</div>

<%- include("footer") -%>
